 //Laço For
 //Números divisíveis por 15 = "FizzBuzz"
 //Números divisiveis por 3 = "Fizz"
 //Números divisiveis por 5 = "Buzz"
 
 fun fizzBuzz(numero: Int)= when{
     numero % 15 == 0 -> "FizzBuzz"
     numero % 3 == 0 -> "Fizz"
     numero % 5 == 0 -> "Buzz"
     else -> "$numero"
}
 
  /*   
  *Funções são blocos de codigo que fazemos em lugares 
  *separados e depois chamamos eles onde queremos que
  *sejam executados
  */
  
  
  fun simples(){
      println("Hello World")
  }
  
  fun max(a: Int, b: Int): Int{
     return if(a > b){
          a
      }else{
          b
      }
  }
  
  fun acSimples(){
      println("Eu sou uma função simples")
      
      var num1 = 10
      var num2 = 7
      
      if(num1 > num2){
          println("$num1 é maior que $num2")
      }else{
          println("$num1 é menor que $num2")
      }
  }
  
  //Função com parametro
  fun parametro(moedas: Int){
      if(moedas >= 15){
          println("pode avançar ou comprar")
      }else{
          println("Tá mais pobre que o Nicolas negativado")
      }
  }
  
  //Função com retorno
  fun retorno(nome: String):String{
      var texto = "Olá, meu nome é $nome e eu vou ir dia 27 de outubro no cinema"
      
      return texto
      
  }
 /----------------------------------------------------------------------------------------- 
  
fun main() {
     //Collections
   
    /*
     * O Kotlin não possui em sua base as estruturas de dados de coleções,
     * logo, ele acaba por importar do seu pai (Java) e isso se aplica a todos os
     * conjuntos de dados de classes colecionáveis (List, Map, Set, array e etc)
     * 
     * 
     * Ex.: val frutas = arrayListOf("Maça","Banana","Manga")
     * 
     */
    
    println("Vamos criar uma lista")
    
    //Mutável, sem tamanho fixo, pode adicionar ou remover valores
    val frutas = ArrayList<String>()
    
    //Adicionar um valor/item dentro da nossa lista
    frutas.add("Acerola")
    frutas.add("Tomate")
    frutas.add("Laranja")
    
    //Exibir a lista concatenando
    println("Esta é a nossa lista $frutas")
    
    
    
    val frutas1 = arrayListOf<String>("maça","banana","morango")
    
    frutas1.add("Romã")
    println(frutas1)
    //Alterar o item de acordo com o posionamento
    frutas1[3] = "manga"
    println(frutas1)
    //Remover a partir do nome
    frutas1.remove("banana")
    println(frutas1)
    //Remover a partir do posicionamento
    frutas1.removeAt(0)
    println(frutas1)
    println(frutas1.size)//Verificar o tamanho/quantos itens tem na lista
    println(frutas1.isEmpty())//Verifica se está vazia ou não
    
    //List -> Imutável, tamanho fixo (nãoo pode add), apenas para leitura 
    var listaItens = listOf("Sólido","Líquido","Gasoso")
    println(listaItens)
    
    
    var lista = mutableListOf<String>()
    lista.add("Uma Lista")
    
    
    
    var nomes = mutableMapOf(12 to "Gui", 75 to "Jonas Brode")
    nomes.put(20,"João")
    nomes.put(35,"Zé")
    nomes[12] = "Gasbriel"
    nomes.remove(75)
    println(nomes)
    }

