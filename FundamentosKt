        println("Voce está abaixo do peso")
    }else if(imc >=18.5  && imc < 25){
        println("IMC: $imc")
        println("Voce está no peso normal")
    }else if(imc >=25 && imc < 30){
        println("IMC: $imc")
        println("Voce está com Sobrepeso")
